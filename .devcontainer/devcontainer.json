{
    "name": "ska_tango_base vscode development container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                "terminal.integration.defaultProfile.linux": "bash",
                "python.pythonPath": "/usr/bin/python3",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.pylintPath": "/usr/local/bin/pylint",
                "coverage-gutters.manualCoverageFilePaths": [
                    "/workspaces/ska-low-mccs/build/reports/code-coverage.xml"
                ],
                "coverage-gutters.showLineCoverage": true
            },
            "extensions": [
                "ms-python.python",
                "lextudio.restructuredtext",
                "trond-snekvik.simple-rst",
                "davidanson.vscode-markdownlint",
                "ryanluker.vscode-coverage-gutters"
            ]
        }
    },
    "postCreateCommand": "sudo poetry config virtualenvs.create false && sudo poetry install",
    "remoteUser": "tango",
    "remoteEnv": {
        "PATH": "/home/tango/.local/bin:${containerEnv:PATH}",
    }
}
